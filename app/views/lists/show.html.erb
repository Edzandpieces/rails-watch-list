<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to lists_path, class: 'btn btn-light' do %>
  <ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <%= link_to bookmark_path(bookmark), method: :delete, class: 'btn btn-light', data: { confirm: "Are you sure you want to delete #{@bookmark}?" } do %>
    <i class="fas fa-trash"></i>
      <% end %>
  <% end %>
</ul>
  <%= link_to 'Back', lists_path %> |
  <%= link_to 'Create a bookmark', new_list_bookmark_path(@list) %>
  <% end %>
</div>
</div>
